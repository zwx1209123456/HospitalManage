        /*用户-添加*/
        function user_management_add(title, url, w, h) {
            x_admin_show(title, url, w, h);
        }
        /*用户-查看*/
        function user_management_show(title, url, w, h) {
            x_admin_show(title, url, w, h);
        }

        //gong子窗体调用
        function setChainsList(chainsList) {
